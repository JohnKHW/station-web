root = true

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true
indent_style = tab
indent_size = tab
tab_width = 7
max_line_length = 128

[*.cabal]
indent_style = space
indent_size = 2

[*.sql]
tab_width = 5

[*.hs]
tab_width = 3

[*.xhtml]
tab_width = 2

[*.xsl]
tab_width = 2

[*.css]
tab_width = 11

[*.js]
tab_width = 3
